<resources>

    <style name="AppTheme" parent="AppTheme.Parent" />

    <style name="AppTheme.Parent" parent="Theme.AppCompat">
        <item name="android:windowActionModeOverlay">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>

        <item name="colorPrimary">@color/light_secondary</item>
        <item name="colorPrimaryDark">@color/lighter_grey</item>
        <item name="colorAccent">@color/secondary</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <item name="android:actionModeBackground">@color/light_secondary</item>
        <item name="actionModeBackground">@color/lighter_grey</item>
        <item name="android:windowBackground">@color/dark_grey</item>
    </style>

    <style name="AppTheme.Light" parent="Theme.AppCompat.Light">
        <item name="android:windowActionModeOverlay">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>

        <item name="colorPrimary">@color/light_secondary</item>
        <item name="colorPrimaryDark">@color/lighter_grey</item>
        <item name="colorAccent">@color/secondary</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <item name="android:actionModeBackground">@color/light_secondary</item>
        <item name="actionModeBackground">@color/lighter_grey</item>
    </style>

    <style name="LightTextToolbarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:actionModeBackground">@color/light_secondary</item>
        <item name="actionModeBackground">@color/lighter_grey</item>

        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>
</resources>
